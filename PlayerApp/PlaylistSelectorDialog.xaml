<Window x:Class="PlayerApp.PlaylistSelectorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выберите плейлист" Height="300" Width="400" WindowStartupLocation="CenterOwner" Icon="/Images/icon.ico">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="listBoxPlaylists" Grid.Row="0" DisplayMemberPath="Name"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Удалить" Width="80" Margin="0,0,10,0" Click="DeleteButton_Click"/>
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Content="Отмена" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>